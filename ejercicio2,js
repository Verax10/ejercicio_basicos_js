/* 2.2 */


// Tu código para calcular el precio total aquí...

const sable1 = { nombre: "Shoto de Yoda", precio: 1500 };
const sable2 = { nombre: "Sable de Darth Vader", precio: 2000 };

// Calcular el precio total
const precioTotal = sable1.precio + sable2.precio;

// Imprimir el resultado en consola
console.log("El precio total de los sables de luz es: $" + precioTotal);


/* 2.3 */

let precioBaseGlobal = 25000; // Se actualiza el precio base global a 25,000 créditos

// Definición de las naves
const nave1 = { nombre: "Ala-X", precioBase: 50000, precioFinal: 0 };
const nave2 = { nombre: "Halcón Milenario", precioBase: 70000, precioFinal: 0 };

// Actualizar el precio final sumando precioBaseGlobal a precioBase
nave1.precioFinal = nave1.precioBase + precioBaseGlobal;
nave2.precioFinal = nave2.precioBase + precioBaseGlobal;

// Imprimir los resultados
console.log(nave1);
console.log(nave2);